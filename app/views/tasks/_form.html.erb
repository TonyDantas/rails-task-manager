<%= form_for(@task) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :details %>
    <%= f.text_field :details %>
  </p>

  <p>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </p>

  <p>
    <button type="submit" class="btn btn-success">Update Task</button>
  </p>
<% end %>
