<div class="container rounded mt-3">
  <div class="card">
    <div class="card-header text-center">
      <h1>My tasks</h1>
    </div>
    <div class="card-body">
      <ul class="list-group">
        <% @tasks.each do |task| %>
          <% if task.completed %>
            <li class="list-group-item list-group-item-success"><%= link_to "#{task.title} ", task_path(task) %></li>
          <%else%>
            <li class="list-group-item list-group-item-danger"><%= link_to "#{task.title} ", task_path(task) %></li>
          <% end %>
        <% end %>
      </ul>
      <div>
        <p class="btn btn-success mt-3">
          <%= link_to 'Add task', new_task_path %>
        </p>
      </div>
    </div>
  </div>
</div>

